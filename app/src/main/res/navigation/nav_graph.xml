<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registrationFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.teamfinder.teamfinder.presentation.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.teamfinder.teamfinder.presentation.searchscreen.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.teamfinder.teamfinder.presentation.contacts.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/playersSearchFragment"
        android:name="com.teamfinder.teamfinder.presentation.playerssearch.PlayersSearchFragment"
        android:label="fragment_players_search"
        tools:layout="@layout/fragment_players_search" />
    <fragment
        android:id="@+id/teamsSearchFragment"
        android:name="com.teamfinder.teamfinder.presentation.teamssearch.TeamsSearchFragment"
        android:label="fragment_teams_search"
        tools:layout="@layout/fragment_teams_search" />
</navigation>