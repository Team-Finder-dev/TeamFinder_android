<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/main_white</item>
<!--        <item name="hintTextAppearance"></item>--> <!--        TODO Добавить стиль текста подсказки-->
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/edittext_corner_radius_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edittext_corner_radius_8dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edittext_corner_radius_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edittext_corner_radius_8dp</item>
<!--        <item name="placeholderTextAppearance">@style/Text.Regular16.FilterElement</item>--> <!--        TODO Добавить стиль текста placeholder-->
        <item name="placeholderTextColor">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
<!--        <item name="colorControlActivated">?attr/formsActivatedHighlightColor</item>-->
<!--        <item name="android:textColorHighlight">?attr/formsHintColor</item>-->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:inputType">text</item>
<!--        <item name="android:fontFamily">@font/ys_display_medium</item>-->
<!--        <item name="hintTextAppearance">@style/Text.Hint</item>-->
        <item name="hintEnabled">false</item>
    </style>

    <style name="SpinnerChar" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:padding">@dimen/min_padding_4dp</item>
        <item name="android:background">@drawable/rounded_corners_background_8dp</item>
    </style>
</resources>