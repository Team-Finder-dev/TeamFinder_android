<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_medium"
    tools:context=".presentation.playerssearch.PlayersSearchFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_search_field"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:endIconDrawable="@drawable/ic_search_24dp"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_sort_22dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ti_search_field"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:paddingStart="@dimen/text_input_padding_start_40dp"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <HorizontalScrollView
        android:id="@+id/sv_spiiner_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tl_search_field"
        app:layout_constraintStart_toStartOf="@+id/tl_search_field"
        app:layout_constraintTop_toBottomOf="@id/tl_search_field">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_search_field">

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_sport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_player_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_work_leg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_technical_characteristics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_physical_characteristics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.teamfinder.teamfinder.base.DropDownContainer
                android:id="@+id/ddc_natural_attributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_spiiner_block"
        tools:itemCount="6"
        tools:listitem="@layout/item_player" />

</androidx.constraintlayout.widget.ConstraintLayout>